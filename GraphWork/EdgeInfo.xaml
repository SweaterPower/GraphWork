<UserControl x:Class="GraphWork.EdgeInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GraphWork"
             mc:Ignorable="d" x:Name="EI"
             d:DesignHeight="20" d:DesignWidth="30">
    <Border Width="30" Height="20" CornerRadius="55" BorderThickness="1">
    <TextBlock x:Name="mainTB"  Text="{Binding Path=Txt, ElementName=EI}" FontSize="14" TextAlignment="Center" FontWeight="Bold" Background="LightBlue">
            
    </TextBlock>
    </Border>
</UserControl>
