<UserControl x:Class="GraphWork.Vertex"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GraphWork"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="30">
    <Grid Width="30" Height="30">
        <Ellipse x:Name="VertexEl" Fill="DarkBlue"/>
        <Thumb Opacity="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" DragDelta="Thumb_DragDelta"/>
    </Grid>
</UserControl>
